require 'json'
require 'pry'
require 'redis-objects'
ONION = File.read("/var/lib/tor/services/hostname").chomp!.gsub(".onion", '')
if ARGF.argv[0] == '--monitor'
  Process.detach( fork { Redis.new.monitor {|e| puts "> #{e}" } } )
end
Dir.chdir("/home/pi/nomadic/mango2")
CONF = JSON.parse(File.read('config.json'))
Dir['lib/*'].each {|e| load e }
load "start.rb"
binding.pry